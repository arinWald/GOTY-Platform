			level1songpath="Assets/Audio/Music/level1Song.ogg"/>
    <item x="256" y="515" texturepath="Assets/Textures/goldCoin.png" 
		  coinfxpath="Assets/Audio/Fx/coinPickup.ogg"/>
    <intro texturepath ="Assets/Textures/Scenas/Intro.png"/> 
    <game_over texturepath ="Assets/Textures/Scenas/Game over.png"/> 
  </scene>

  <map>
    <mapfolder path="Assets/Maps/"/>
    <mapfile path="Assets/Maps/level1.tmx"/>
  </map>
  
